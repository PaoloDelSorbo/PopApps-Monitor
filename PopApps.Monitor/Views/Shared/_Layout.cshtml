@using System.Web.Optimization
@{
    var jsBundle = new Bundle("~/js");
    jsBundle.AddFile("~/Scripts/knockout-2.1.0.js");
    jsBundle.AddFile("~/Scripts/bootstrap.js");
    jsBundle.AddFile("~/Scripts/jquery-ui-1.8.19.min.js");
    jsBundle.AddFile("~/Scripts/jquery.validate.js");
    jsBundle.AddFile("~/Scripts/jquery.validate.unobtrusive.js");
    jsBundle.AddFile("~/Scripts/jquery.unobtrusive-ajax.js");
    BundleTable.Bundles.Add(jsBundle);
    var bootstrapBundle = new Bundle("~/content/site");
    bootstrapBundle.AddFile("~/Content/bootstrap.css");
    bootstrapBundle.AddFile("~/Content/bootstrap-responsive.css");
    bootstrapBundle.AddFile("~/Content/Site.css");
    BundleTable.Bundles.Add(bootstrapBundle);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0;" />
    <title>@ViewBag.Title</title>
    <link href="@BundleTable.Bundles.ResolveBundleUrl("~/content/themes/base/css")" rel="stylesheet" type="text/css" />
    <link href="@BundleTable.Bundles.ResolveBundleUrl("~/content/site")" rel="stylesheet" type="text/css" />
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="#">@ViewBag.ApplicationName</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a href="/">Home</a></li>
                        <li><a href="/about">About</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year <span>@ViewBag.Copyright</span></p>
        </footer>
    </div>
    <script src="@BundleTable.Bundles.ResolveBundleUrl("~/js")"></script>
    @RenderSection("Scripts", false)
</body>
</html>
